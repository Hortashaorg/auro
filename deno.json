{
  "name": "@monorepo/auro",
  "exports": "./main.ts",
  "workspace": [
    "./packages/common",
    "./packages/database",
    "./packages/framework",
    "./services/app",
    "./services/jobs"
  ],
  "tasks": {
    "app:dev": "deno run -A scripts/task.ts '@service/app' dev",
    "packages:test": "deno run -A scripts/task.ts '**' test"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "https://esm.sh/preact@10.24.3",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true
  },
  "imports": {
    "@std/fs": "jsr:@std/fs@^1.0.6",
    "@std/path": "jsr:@std/path@^1.0.8"
  }
}
