{
  "name": "@monorepo/auro",
  "exports": "./main.ts",
  "workspace": [
    "./packages/common",
    "./packages/database",
    "./packages/framework",
    "./services/app",
    "./services/jobs"
  ],
  "tasks": {
    "all:typecheck": "deno run -A scripts/task.ts '@{package,service}/*' typecheck",
    "all:lint": "deno run -A scripts/task.ts '@{package,service}/*' lint",
    "all:fmt": "deno run -A scripts/task.ts '@{package,service}/*' fmt",
    "app:dev": "deno run -A scripts/task.ts '@service/app' dev",
    "app:tailwind": "deno run -A scripts/task.ts '@service/app' tailwind",
    "db:generate": "deno run -A scripts/task.ts '@package/database' generate",
    "db:migrate": "deno run -A scripts/task.ts '@package/database' migrate"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "https://esm.sh/preact@10.24.3",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true
  },
  "imports": {
    "@std/fs": "jsr:@std/fs@^1.0.8",
    "@std/path": "jsr:@std/path@^1.0.8"
  }
}
