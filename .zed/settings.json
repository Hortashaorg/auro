{
    "lsp": {
        "deno": {
            "settings": {
                "deno": {
                    "enable": true
                }
            }
        },
        "tailwindcss-language-server": {
            "settings": {
                "classFunctions": ["cva", "cx"]
            }
        }
    },
    "languages": {
        "TypeScript": {
            "language_servers": ["deno", "tailwindcss-language-server"],
            "formatter": "language_server"
        },
        "TSX": {
            "language_servers": ["deno", "tailwindcss-language-server"],
            "formatter": "language_server"
        }
    }
}
