{
    "lsp": {
        "deno": {
            "settings": {
                "deno": {
                    "enable": true
                }
            }
        },
        "tailwindcss-language-server": {
            "settings": {
                "classFunctions": ["tw", "cva", "clsx"]
            }
        }
    },
    "languages": {
        "TypeScript": {
            "language_servers": [
                "deno",
                "tailwindcss-language-server",
                "!typescript-language-server",
                "!vtsls",
                "!eslint"
            ],
            "formatter": "language_server"
        },
        "TSX": {
            "language_servers": [
                "deno",
                "tailwindcss-language-server",
                "!typescript-language-server",
                "!vtsls",
                "!eslint"
            ],
            "formatter": "language_server"
        }
    }
}
