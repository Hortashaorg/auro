{
  "name": "@package/database",
  "exports": "./mod.ts",
  "imports": {
    "drizzle-kit": "npm:drizzle-kit@^0.28.1",
    "drizzle-orm": "npm:drizzle-orm@^0.36.4",
    "postgres": "npm:postgres@^3.4.5"
  },
  "tasks": {
    "typecheck": "deno check .",
    "lint": "deno lint .",
    "fmt": "deno fmt .",
    "generate": "deno run -A --node-modules-dir npm:drizzle-kit generate",
    "migrate": "deno run -A --node-modules-dir npm:drizzle-kit migrate",
    "test": "deno run -A mod.ts"
  },
  "lint": {
    "exclude": ["drizzle/"]
  },
  "fmt": {
    "exclude": ["drizzle/"]
  }
}
