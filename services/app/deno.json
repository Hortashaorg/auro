{
  "version": "0.0.1",
  "name": "@service/app",
  "exports": "./main.ts",
  "imports": {
    "class-variance-authority": "npm:class-variance-authority@^0.7.1",
    "clsx": "npm:clsx@^2.1.1",
    "tailwind-merge": "npm:tailwind-merge@^3.0.2",
    "tailwindcss": "npm:tailwindcss@^4.0.14",
    "@comp/": "./components/",
    "@sections/": "./sections/",
    "@pages/": "./pages/",
    "@permissions/": "./permissions/",
    "@api/": "./api/",
    "@queries/": "./queries/"
  },
  "tasks": {
    "typecheck": "deno check .",
    "lint": "deno lint .",
    "fmt": "deno fmt .",
    "tailwind": "./tailwindcli -i ./main.css -o ./public/main.css --minify --watch",
    "dev": "doppler run --project auro --config local -- deno run --unstable-otel --unstable-temporal --allow-net --allow-read --allow-env --watch ./main.ts",
    "comp:build": "deno run --allow-read --allow-write components/createStructure.ts"
  },
  "exclude": ["public/main.css"]
}
