{
  "version": "0.0.1",
  "name": "@service/app",
  "exports": "./main.ts",
  "imports": {
    "@kalena/components": "jsr:@kalena/components@^0.1.3",
    "@kalena/framework": "jsr:@kalena/framework@^0.1.2",
    "class-variance-authority": "npm:class-variance-authority@^0.7.1",
    "clsx": "npm:clsx@^2.1.1",
    "tailwind-merge": "npm:tailwind-merge@^3.0.1",
    "tailwindcss": "npm:tailwindcss@^4.0.6",
    "@comp/": "./components/",
    "@layouts/": "./layouts/",
    "@sections/": "./sections/",
    "@context/": "./context/",
    "@pages/": "./pages/",
    "@permissions/": "./permissions/",
    "@api/": "./api/"
