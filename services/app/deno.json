{
  "version": "0.0.1",
  "name": "@service/app",
  "exports": "./main.ts",
  "imports": {
    "class-variance-authority": "npm:class-variance-authority@^0.7.1",
    "clsx": "npm:clsx@^2.1.1",
    "preact": "npm:preact@^10.25.4",
    "tailwind-merge": "npm:tailwind-merge@^2.6.0",
    "tailwindcss": "npm:tailwindcss@^4.0.0",
    "@utils/": "./utils/",
    "@comp/": "./components/",
    "@layouts/": "./layouts/",
    "@sections/": "./sections/"
  },
  "tasks": {
    "typecheck": "deno check .",
    "lint": "deno lint .",
    "fmt": "deno fmt .",
    "tailwind": "./tailwindcli -i ./main.css -o ./public/main.css --minify --watch",
    "dev": "deno run --allow-net --allow-read --allow-env --env-file=.env.local --watch ./main.ts"
  },
  "fmt": {
    "exclude": ["public/main.css"]
  }
}
